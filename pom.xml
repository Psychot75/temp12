<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>log121</groupId>
    <artifactId>sorting-visualizer</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>

    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <javafx.version>25-ea+2</javafx.version>
        <!-- Entry point for 'mvn javafx:run' — must be the Application subclass -->
        <main.class>app.Main</main.class>
        <!-- Entry point for the fat JAR — must NOT extend Application -->
        <launcher.class>app.Launcher</launcher.class>
    </properties>

    <dependencies>
        <!-- JavaFX Controls: Button, Label, ComboBox, TextField, Canvas… -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <!-- JavaFX Graphics: Application, Scene, Stage, Color, Font, Canvas… -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-graphics</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <!-- JavaFX Base: FXCollections, ObservableList… -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-base</artifactId>
            <version>${javafx.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <!-- ── Compiler: pass module flags ──────────────────────────────── -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <source>21</source>
                    <target>21</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>

            <!-- ── mvn javafx:run ────────────────────────────────────────────
                 Points to Main (the Application subclass).
                 The plugin handles --module-path automatically.          -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <mainClass>${main.class}</mainClass>
                    <options>
                        <option>--enable-native-access=ALL-UNNAMED</option>
                    </options>
                </configuration>
            </plugin>

            <!-- ── Fat JAR ───────────────────────────────────────────────────
                 Manifest Main-Class = Launcher (does NOT extend Application).
                 Run with:
                   java -jar target/sorting-visualizer-1.0.0-jar-with-dependencies.jar

                 WHY Launcher and not Main:
                   If Main (extends Application) is the manifest entry point,
                   the JVM launcher checks for JavaFX modules before main()
                   runs and throws "JavaFX runtime components are missing".
                   Launcher avoids this — it triggers Application.launch()
                   from within Java code, bypassing the launcher check.    -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.6.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>${launcher.class}</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <appendAssemblyId>false</appendAssemblyId>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals><goal>single</goal></goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>